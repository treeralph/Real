<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chattingRoomItemLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chattingRoomItemContentImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/push_img"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/chattingRoomItemContentTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="CONTENT TITLE"
            android:textSize="25dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/chattingRoomItemClientUserNickName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="CLIENTUSERNICKNAME"
            android:textSize="15dp"
            android:layout_weight="2"/>



    </LinearLayout>

</LinearLayout>