<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/messageItemForImageForAnotherLinearLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messageItemForImageForAnotherProfileImageViewDesign"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            android:src="@drawable/push_img"
            app:civ_border_width="1.5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp"
                app:contentPadding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="3dp">
                    <ImageView
                        android:id="@+id/messageItemForImageForAnotherImageImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/push_img" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/messageItemForImageForAnotherTimeTextViewDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:text="0000.00.00 - 00:00"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/simplehae_ed_final"/>

    </LinearLayout>
</RelativeLayout>