<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/messageItemForUserLinearLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            app:contentPadding="1.5dp"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D1C4E9"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="Reservation Confirmed"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/messageItemForConfirmedAppointmentTTextViewDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="4월 23일, 오후 7시 30분"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/messageItemForConfirmedAppointmentLocationTextView2Design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="쑤찌꾸청"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/messageItemForConfirmedAppointmentTimeTextViewDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="0000.00.00 - 00:00"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/simplehae_ed_final"/>
    </LinearLayout>
</RelativeLayout>