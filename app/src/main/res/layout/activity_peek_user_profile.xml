<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeekUserProfileActivity"
    android:background="#00ffffff">

    <LinearLayout
        android:id="@+id/peekUserProfileActivityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="testView"
        android:orientation="vertical"
        android:background="@color/white">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/peekUserProfileActivityUserHierarchy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/diamond"
                android:scaleType="centerCrop"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="-40dp"
                app:contentPadding="20dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/fui_transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/peekUserProfileActivityProfileImageImageView"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/push_img"
                        app:civ_border_width="1.5dp"
                        android:layout_gravity="center"
                        android:transitionName="peekUserProfileActivityProfileImageImageView"/>

                    <TextView
                        android:id="@+id/peekUserProfileActivityProfileNickNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="NICKNAME"
                        android:textSize="40dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/simplehae"
                        android:textStyle="bold"
                        android:transitionName="peekUserProfileActivityProfileNickNameTextView"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/peekUserProfileActivityUserIncomeTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="300K"
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/simplehae"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="income"
                                android:textSize="20dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/simplehae"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/peekUserProfileActivityUserContentNumTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="300K"
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/simplehae"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="#content"
                                android:textSize="20dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/simplehae"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Reputation"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/simplehae"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/peekUserProfileActivityReputationStar1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_blank_v2"/>
            <ImageView
                android:id="@+id/peekUserProfileActivityReputationStar2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_blank_v2"/>
            <ImageView
                android:id="@+id/peekUserProfileActivityReputationStar3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_blank_v2"/>
            <ImageView
                android:id="@+id/peekUserProfileActivityReputationStar4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_blank_v2"/>
            <ImageView
                android:id="@+id/peekUserProfileActivityReputationStar5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_blank_v2"/>

            <TextView
                android:id="@+id/peekUserProfileActivityReputationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="0.0"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/simplehae"
                android:textStyle="bold"
                android:gravity="center"/>



        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/peekUserProfileActivityEmptySpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/peekUserProfileActivityLinearLayout"/>

</RelativeLayout>