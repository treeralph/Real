<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/messageItemForUserLinearLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            app:contentPadding="1.5dp"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D1C4E9"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/messageItemForAppointmentTimeTextViewDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="1월 1일, 오후 1시 1분"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/messageItemForAppointmentLocationTextView2Design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="쑤찌꾸청"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="Would u make reservation?"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="1dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/messageItemForAppointmentPositiveBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#C5CAE9"
                                app:cardCornerRadius="8dp">


                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/simplehae_ed_final"
                                    android:gravity="center"
                                    android:text="예"
                                    android:textColor="@color/black"
                                    android:textSize="10dp"
                                    android:textStyle="bold" />


                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="1dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/messageItemForAppointmentNegativeBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#F8BBD0"
                                app:cardCornerRadius="8dp">


                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/simplehae_ed_final"
                                    android:text="아니오"
                                    android:gravity="center"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>


                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>