<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/messageItemForUserLinearLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            app:contentPadding="1.5dp"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FF7979"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/messageItemForUserMessageTextViewDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:maxWidth="250dp"
                        android:fontFamily="@font/simplehae"
                        android:text="4월 23일, 오후 7시 30분\n수지구청역 1번 출구 앞"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="1.5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#FF7979"
                                app:cardCornerRadius="8dp"
                                app:contentPadding="6dp">


                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/simplehae"
                                    android:text="예"
                                    android:textSize="18dp"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>


                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="1.5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#FF7979"
                                app:cardCornerRadius="8dp"
                                app:contentPadding="6dp">


                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/simplehae"
                                    android:text="아니오"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>


                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/messageItemForUserTimeTextViewDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="0000.00.00 - 00:00"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/simplehae"/>

    </LinearLayout>
</RelativeLayout>