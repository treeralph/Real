<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuctionBidActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : "
                android:textSize="15dp"
                android:fontFamily="@font/ptsanscaptionregular"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.2"/>
            <EditText
                android:id="@+id/AuctionBidActivityPriceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:textSize="30dp"
                android:fontFamily="@font/ptsanscaptionregular"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/AuctionBidActivityBidBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bid"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/ptsanscaptionregular"
                android:layout_weight="1.3"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# User Price must be bid higher than Price"
            android:fontFamily="@font/ptsanscaptionregular"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>