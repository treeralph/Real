<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/contentsItemForACLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/contentsItemForACCardView"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:transitionName="contentsItemForACCardView"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="5dp"
            app:contentPadding="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="3dp">

                <ImageView
                    android:id="@+id/contentsItemForACImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/push_img" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/contentsItemForACTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/simplehae_ed_final"
                    android:text="0000.00.00 - 00:00"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/talking" />

                <TextView
                    android:id="@+id/contentsItemForACNumCommentTextView"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/simplehae_ed_final"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        app:contentPadding="1dp"
                        app:cardCornerRadius="100dp"
                        app:cardBackgroundColor="@color/black">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/yellow"
                            app:cardCornerRadius="100dp"
                            app:contentPadding="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:text="경매"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:fontFamily="@font/simplehae_ed_final"
                                android:textStyle="bold"
                                android:textSize="10dp"/>

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/contentsItemForACTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/simplehae_ed_final"
                        android:text="Content Title"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/contentsItemForACLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/simplehae_ed_final"
                    android:text="수지구 풍덕천동"
                    android:textColor="@color/grey"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/contentsItemForACPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/simplehae_ed_final"
                android:text="70,000원"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentsItemForACRemainingTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/simplehae_ed_final"
                android:text="3시간 후 마감"
                android:textColor="@color/grey"
                android:textSize="11dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>