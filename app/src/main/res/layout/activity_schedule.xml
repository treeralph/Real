<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity"
    android:background="#00ffffff">

    <LinearLayout
        android:id="@+id/SchduleActivityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <DatePicker
            android:id="@+id/ScheduleActivitydataPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/SchduleActivityScheduleTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TimePicker
            android:id="@+id/ScheduleActivityTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/SchduleActivityTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:text="Confirm"
            android:textSize="15dp"
            android:id="@+id/ScheduleActivityConfirmBtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/ScheduleActivityEmptySpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SchduleActivityLinearLayout"/>
</RelativeLayout>